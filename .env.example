# =============================================================================
# TEMPO-MCP CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# NETWORK CONFIGURATION
# -----------------------------------------------------------------------------
# Tempo testnet RPC endpoint
TEMPO_RPC_URL=https://rpc.testnet.tempo.xyz

# Chain ID (42429 for testnet)
TEMPO_CHAIN_ID=42429

# Block explorer URL
TEMPO_EXPLORER_URL=https://explore.tempo.xyz

# -----------------------------------------------------------------------------
# WALLET CONFIGURATION
# -----------------------------------------------------------------------------
# Private key (DO NOT commit real keys!)
# For testnet, get tokens from faucet: https://docs.tempo.xyz/quickstart/faucet
TEMPO_PRIVATE_KEY=

# Or use encrypted keystore
# TEMPO_KEYSTORE_PATH=./keystore.json
# TEMPO_KEYSTORE_PASSWORD=

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# Maximum single payment amount (in token units)
TEMPO_MAX_SINGLE_PAYMENT=1000

# Daily spending limit (in token units)
TEMPO_DAILY_LIMIT=10000

# Enable address allowlist (true/false)
TEMPO_ALLOWLIST_ENABLED=false

# Rate limit: max tool calls per minute
TEMPO_RATE_LIMIT=60

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
# Log level: debug, info, warn, error
TEMPO_LOG_LEVEL=info

# Enable audit logging (true/false)
TEMPO_AUDIT_LOG_ENABLED=true

# Audit log file path
TEMPO_AUDIT_LOG_PATH=./logs/audit.jsonl

# -----------------------------------------------------------------------------
# TOKEN CONFIGURATION
# -----------------------------------------------------------------------------
# Default token for payments (symbol or address)
TEMPO_DEFAULT_TOKEN=AlphaUSD

# AlphaUSD token address (testnet)
TEMPO_ALPHAUSD_ADDRESS=0x20c0000000000000000000000000000000000001
